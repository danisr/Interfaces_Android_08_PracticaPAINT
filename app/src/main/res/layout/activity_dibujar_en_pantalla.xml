<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="5dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="100">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:layout_marginLeft="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nuevo"
            android:background="#ffffff"
            android:id="@+id/nuevo" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:src="@drawable/borrar"
            android:id="@+id/borrar" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:src="@drawable/guardar"
            android:id="@+id/guardar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="8"
        android:weightSum="100" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_weight="12.5"
            android:id="@+id/ivNegro" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_weight="12.5"
            android:id="@+id/ivBlanco" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:layout_weight="12.5"
            android:id="@+id/ivRojo" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#0048ff"
            android:layout_weight="12.5"
            android:id="@+id/ivAzul" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#10d43a"
            android:layout_weight="12.5"
            android:id="@+id/ivVerde" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#bb33ff"
            android:layout_weight="12.5"
            android:id="@+id/ivMorado" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ff6600"
            android:layout_weight="12.5"
            android:id="@+id/ivNaranja" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#66ffff"
            android:layout_weight="12.5"
            android:id="@+id/ivCeleste" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#ffffff"
        android:id="@+id/sbGrosor"/>

    <com.utad.dint08_practicapaint.PizarraView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lienzo"
        android:layout_weight="76"
        android:background="#FFFF96"/> <!-- rgb(255, 255, 150) -->

</LinearLayout>